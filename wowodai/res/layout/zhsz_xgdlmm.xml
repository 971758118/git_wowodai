<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.example.common.MyHeadView
        android:id="@+id/myHeadView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.example.common.MyHeadView>

    <EditText
        android:id="@+id/et_original"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_round_all"
        android:ems="10"
        android:hint="请输入当前用户登录密码"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:textColorHint="@color/wowodai_text_gray"
        android:textSize="13sp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/et_new"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_round_all"
        android:ems="10"
        android:hint="请输入新的登录密码"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:textColorHint="@color/wowodai_text_gray"
        android:textSize="13sp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/et_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_round_all"
        android:ems="10"
        android:hint="请再次输入新的登录密码"
        android:inputType="textPassword"
        android:paddingLeft="5dp"
        android:textColorHint="@color/wowodai_text_gray"
        android:textSize="13sp" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@drawable/shape_button_login"
        android:text="确认修改"
        android:textColor="@color/wowodai_text_white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/ckb_ok"
            android:layout_width="wrap_content"
             android:checked="true"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="我已阅读并同意"
            android:textColor="@color/wowodai_text_gray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="《握握贷用户协议》"
            android:textColor="@color/wowodai_text_red"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>