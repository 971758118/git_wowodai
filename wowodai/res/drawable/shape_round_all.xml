<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- android:shape 默认为矩形，可以设置为矩形（rectangle）、椭圆形(oval)、线性形状(line)、环形(ring) -->


    <!-- 填充颜色 -->
    <solid android:color="#ffffff" />

    <!-- 描边 -->
    <stroke
        android:width="1dip"
        android:color="#f2f2f2" />

    <!-- 内边距 -->
    <padding
        android:bottom="0dip"
        android:left="0dip"
        android:right="0dip"
        android:top="0dip" />

    <!-- 圆角 -->
    <corners android:radius="5dp" />

</shape>